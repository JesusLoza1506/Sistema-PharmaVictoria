<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml" fx:controller="com.farmaciavictoria.proyectopharmavictoria.controller.Ventas.VistaPreviaComprobanteController" spacing="18" alignment="CENTER" stylesheets="/css/vista_previa_comprobante.css" styleClass="vista-previa-root">
    <HBox alignment="TOP_RIGHT" spacing="10">
        <Label text="Vista Previa de Comprobante Electrónico" styleClass="vista-previa-titulo" />
        <Pane styleClass="vista-previa-logo" minWidth="60" minHeight="60">
            <!-- Aquí puedes colocar el logo de SUNAT como ImageView -->
            <ImageView fx:id="logoSunat" fitWidth="48" fitHeight="48" />
        </Pane>
    </HBox>
    <GridPane hgap="12" vgap="10" styleClass="vista-previa-grid">
        <Label text="Cliente:" styleClass="vista-previa-label" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <Label fx:id="lblCliente" styleClass="vista-previa-label" GridPane.rowIndex="0" GridPane.columnIndex="1" />
        <Label text="RUC/DNI:" styleClass="vista-previa-label" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <Label fx:id="lblDocumento" styleClass="vista-previa-label" GridPane.rowIndex="1" GridPane.columnIndex="1" />
        <Label text="Dirección:" styleClass="vista-previa-label" GridPane.rowIndex="2" GridPane.columnIndex="0" />
        <Label fx:id="lblDireccion" styleClass="vista-previa-label" GridPane.rowIndex="2" GridPane.columnIndex="1" />
        <Label text="Tipo de Comprobante:" styleClass="vista-previa-label" GridPane.rowIndex="3" GridPane.columnIndex="0" />
        <Label fx:id="lblTipoComprobante" styleClass="vista-previa-label" GridPane.rowIndex="3" GridPane.columnIndex="1" />
        <Label text="Serie:" styleClass="vista-previa-label" GridPane.rowIndex="4" GridPane.columnIndex="0" />
        <Label fx:id="lblSerie" styleClass="vista-previa-label" GridPane.rowIndex="4" GridPane.columnIndex="1" />
        <Label text="Número:" styleClass="vista-previa-label" GridPane.rowIndex="5" GridPane.columnIndex="0" />
        <Label fx:id="lblNumero" styleClass="vista-previa-label" GridPane.rowIndex="5" GridPane.columnIndex="1" />
        <Label text="Total:" styleClass="vista-previa-total-label" GridPane.rowIndex="6" GridPane.columnIndex="0" />
        <Label fx:id="lblTotal" styleClass="vista-previa-total-label" GridPane.rowIndex="6" GridPane.columnIndex="1" />
    </GridPane>
    <TableView fx:id="tableDetalles" prefHeight="200" prefWidth="500" styleClass="vista-previa-table">
        <columns>
            <TableColumn text="Cantidad" fx:id="colCantidad" />
            <TableColumn text="Descripción" fx:id="colDescripcion" />
            <TableColumn text="Precio Unitario" fx:id="colPrecioUnitario" />
            <TableColumn text="IGV" fx:id="colIGV" />
            <TableColumn text="Total" fx:id="colTotal" />
        </columns>
    </TableView>
    <HBox spacing="18" alignment="CENTER">
        <Button text="Emitir comprobante electrónico" fx:id="btnEmitir" styleClass="vista-previa-btn" />
        <Button text="Cancelar" fx:id="btnCancelar" styleClass="vista-previa-btn-cancelar" />
    </HBox>
    <Label fx:id="lblAdvertencia" text="Al confirmar, se enviará el comprobante a SUNAT y no podrá modificarse." styleClass="vista-previa-advertencia" />
</VBox>
