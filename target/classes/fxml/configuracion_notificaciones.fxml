<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.farmaciavictoria.proyectopharmavictoria.configuracion.ConfiguracionNotificacionesController" prefWidth="500" prefHeight="420">
    <children>
        <Label text="Notificaciones por correo" layoutX="30" layoutY="20" style="-fx-font-size: 22px; -fx-font-weight: bold;" />
        <VBox layoutX="30" layoutY="60" spacing="14" prefWidth="440">
            <children>
                <CheckBox fx:id="chkActivarAlertas" text="Activar alertas por correo" />
                <TextField fx:id="txtDestinatario" promptText="Correo destinatario" />
                <TextField fx:id="txtSmtpServer" promptText="Servidor SMTP" />
                <TextField fx:id="txtSmtpPort" promptText="Puerto SMTP" />
                <TextField fx:id="txtSmtpUser" promptText="Usuario SMTP" />
                <PasswordField fx:id="txtSmtpPassword" promptText="Contraseña SMTP" />
                <HBox spacing="10">
                    <children>
                        <CheckBox fx:id="chkSSL" text="Usar SSL" />
                        <CheckBox fx:id="chkTLS" text="Usar TLS" />
                    </children>
                </HBox>
                <HBox spacing="10">
                    <children>
                        <Button fx:id="btnProbar" text="Probar envío" />
                        <Button fx:id="btnGuardar" text="Guardar configuración" />
                    </children>
                </HBox>
                <Label fx:id="lblEstado" text="" style="-fx-text-fill: #d32f2f;" />
            </children>
        </VBox>
    </children>
</AnchorPane>
