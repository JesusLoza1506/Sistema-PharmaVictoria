<BorderPane styleClass="proveedor-detalles-view" stylesheets="@/css/styles.css,@/css/Proveedor/proveedor-detalles.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.farmaciavictoria.proyectopharmavictoria.controller.Proveedor.ProveedorDetallesController">
