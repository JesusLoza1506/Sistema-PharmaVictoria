<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.farmaciavictoria.proyectopharmavictoria.controller.Ventas.ComprobanteAccionesController" spacing="18" alignment="CENTER" style="-fx-background-color: #f8f9fa; -fx-padding: 32;">
    <Label fx:id="lblMensaje" text="¡Comprobante electrónico generado exitosamente!" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #26a69a;" />
    <Button fx:id="btnAbrirPDF" text="Abrir PDF" style="-fx-background-color: #26a69a; -fx-text-fill: white; -fx-font-size: 16px; -fx-pref-width: 220;" />
    <Button fx:id="btnImprimir" text="Imprimir Comprobante" style="-fx-background-color: #009688; -fx-text-fill: white; -fx-font-size: 16px; -fx-pref-width: 220;" />
    <Button fx:id="btnEnviarWhatsApp" text="Compartir por WhatsApp" style="-fx-background-color: #43d854; -fx-text-fill: white; -fx-font-size: 16px; -fx-pref-width: 220;" />
    <Button fx:id="btnEnviarGmail" text="Enviar por Gmail" style="-fx-background-color: #d32f2f; -fx-text-fill: white; -fx-font-size: 16px; -fx-pref-width: 220;" />
</VBox>
