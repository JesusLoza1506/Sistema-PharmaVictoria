<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.farmaciavictoria.proyectopharmavictoria.controller.DashboardController">
   
   <!-- BARRA SUPERIOR -->
   <top>
      <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="header-bar">
         <children>
            <!-- Logo y título -->
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../icons/far.png" />
                     </image>
                  </ImageView>
                  <VBox>
                     <children>
                        <Label styleClass="app-title" text="PharmaVictoria">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                        </Label>
                        <Label fx:id="sucursalLabel" styleClass="sucursal-label" text="Sucursal Imperial">
                           <font>
                              <Font size="11.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
               </children>
            </HBox>
            
            <!-- Spacer -->
            <Region HBox.hgrow="ALWAYS" />
            
            <!-- Información del usuario y acciones -->
            <HBox alignment="CENTER_RIGHT" spacing="15.0">
               <children>
                  <!-- Estado del sistema -->
                  <VBox alignment="CENTER_RIGHT" spacing="2.0">
                     <children>
                        <Label fx:id="fechaHoraLabel" styleClass="datetime-label" text="02/10/2025 - 00:35">
                           <font>
                              <Font size="11.0" />
                           </font>
                        </Label>
                        <Label fx:id="estadoSistemaLabel" styleClass="status-label" text="🟢 Sistema Operativo">
                           <font>
                              <Font size="10.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
                  
                  <Separator orientation="VERTICAL" />
                  
                  <!-- Usuario logueado -->
                  <VBox alignment="CENTER_RIGHT" spacing="2.0">
                     <children>
                        <Label fx:id="usuarioLabel" styleClass="user-label" text="Usuario De Prueba">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Label>
                        <Label fx:id="rolLabel" styleClass="role-label" text="Administrador">
                           <font>
                              <Font size="10.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
                  
                  <!-- Botón de logout -->
                  <Button fx:id="btnCerrarSesion" onAction="#cerrarSesion" styleClass="logout-button" text="Cerrar Sesión">
                     <font>
                        <Font size="11.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </padding>
      </HBox>
   </top>
   
   <!-- MENÚ LATERAL IZQUIERDO -->
   <left>
      <VBox spacing="5.0" styleClass="sidebar" VBox.vgrow="ALWAYS">
         <children>
            <!-- Título del menú -->
            <Label styleClass="sidebar-title" text="MÓDULOS DEL SISTEMA">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
               <padding>
                  <Insets bottom="10.0" left="15.0" right="15.0" top="15.0" />
               </padding>
            </Label>
            <!-- Botones de navegación -->
            <VBox spacing="9.0" styleClass="menu-container" VBox.vgrow="ALWAYS">
               <children>
                  <Button fx:id="btnDashboard" maxWidth="1.7976931348623157E308" onAction="#navegarADashboard" styleClass="menu-button, menu-button-active" text="🏠 Dashboard">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </Button>
                  <Button fx:id="btnVentas" maxWidth="1.7976931348623157E308" onAction="#showVentas" styleClass="menu-button" text="🛒 Punto de Venta">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </Button>
                  <Button fx:id="btnInventario" maxWidth="1.7976931348623157E308" onAction="#showInventario" styleClass="menu-button" text="📦 Inventario">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </Button>
                  <Button fx:id="btnClientes" maxWidth="1.7976931348623157E308" onAction="#showClientes" styleClass="menu-button" text="👥 Clientes">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </Button>
                  <Button fx:id="btnProveedores" maxWidth="1.7976931348623157E308" onAction="#showProveedores" styleClass="menu-button" text="🏢 Proveedores">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </Button>
                  <Button fx:id="btnReportes" maxWidth="1.7976931348623157E308" onAction="#showReportes" styleClass="menu-button" text="📊 Reportes">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </Button>
                  <Separator />
                  <Button fx:id="btnConfiguracion" maxWidth="1.7976931348623157E308" onAction="#showConfiguracion" styleClass="menu-button" text="Configuración">
                     <graphic>
                        <ImageView fitHeight="14.0" fitWidth="14.0" styleClass="menu-config-icon">
                           <image>
                              <Image url="@../icons/configuracion.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <font>
                        <Font size="13.0" />
                     </font>
                     <text>Configuración</text>
                  </Button>
                  <Button fx:id="btnUsuarios" maxWidth="1.7976931348623157E308" onAction="#showUsuarios" styleClass="menu-button" text="👤 Usuarios">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
               </padding>
            </VBox>
         </children>
      </VBox>
   </left>
   
   <!-- CONTENIDO PRINCIPAL -->
   <center>
      <StackPane fx:id="contentArea">
         <children>
            <!-- Panel del Dashboard por defecto -->
            <ScrollPane fx:id="dashboardPane" fitToHeight="true" fitToWidth="true" styleClass="content-scroll">
               <content>
                  <VBox spacing="20.0" styleClass="dashboard-content">
                     <children>
                        <!-- Título de bienvenida -->
                        <VBox spacing="5.0">
                           <children>
                              <Label fx:id="welcomeLabel" styleClass="welcome-title" text="¡Bienvenido a PharmaVictoria!">
                                 <font>
                                    <Font name="System Bold" size="24.0" />
                                 </font>
                              </Label>
                              <Label fx:id="welcomeSubtitle" styleClass="welcome-subtitle" text="Sistema integral de gestión farmacéutica">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </Label>
                           </children>
                        </VBox>
                        
                        <!-- Tarjetas de estadísticas -->
                        <HBox spacing="15.0" alignment="CENTER">
                           <children>
                              <!-- Tarjeta Ventas Hoy -->
                              <VBox spacing="6.0" styleClass="stats-card, card-ventas">
                                 <children>
                                    <Label styleClass="stats-icon" text="💰" alignment="CENTER">
                                       <font>
                                          <Font size="32.0" />
                                       </font>
                                    </Label>
                                    <Label styleClass="stats-title" text="Ventas Hoy" alignment="CENTER">
                                       <font>
                                          <Font name="System Bold" size="14.0" />
                                       </font>
                                    </Label>
                                    <Label fx:id="ventasHoyLabel" styleClass="stats-value" text="S/ 2,450.00" alignment="CENTER">
                                       <font>
                                          <Font name="System Bold" size="20.0" />
                                       </font>
                                    </Label>
                                    <Label fx:id="ventasHoyCountLabel" styleClass="stats-detail" text="15 ventas realizadas" alignment="CENTER">
                                       <font>
                                          <Font size="11.0" />
                                       </font>
                                    </Label>
                                 </children>
                                 <padding>
                                    <Insets bottom="0.0" left="20.0" right="20.0" top="15.0" />
                                 </padding>
                                 <spacing>10.0</spacing>
                                 <alignment>CENTER</alignment>
                                 <VBox.vgrow>ALWAYS</VBox.vgrow>
                              </VBox>
                              
                              <!-- Tarjeta Productos -->
                              <VBox spacing="6.0" styleClass="stats-card, card-productos">
                                 <children>
                                    <Label styleClass="stats-icon" text="📦" alignment="CENTER">
                                       <font>
                                          <Font size="32.0" />
                                       </font>
                                    </Label>
                                    <Label styleClass="stats-title" text="Productos" alignment="CENTER">
                                       <font>
                                          <Font name="System Bold" size="14.0" />
                                       </font>
                                    </Label>
                                    <Label fx:id="productosLabel" styleClass="stats-value" text="1,245" alignment="CENTER">
                                       <font>
                                          <Font name="System Bold" size="20.0" />
                                       </font>
                                    </Label>
                                    <Label fx:id="productosStockLabel" styleClass="stats-detail" text="12 con stock bajo" alignment="CENTER">
                                       <font>
                                          <Font size="11.0" />
                                       </font>
                                    </Label>
                                 </children>
                                 <padding>
                                    <Insets bottom="0.0" left="20.0" right="20.0" top="15.0" />
                                 </padding>
                                 <spacing>10.0</spacing>
                                 <alignment>CENTER</alignment>
                                 <VBox.vgrow>ALWAYS</VBox.vgrow>
                              </VBox>
                              
                              <!-- Tarjeta Clientes -->
                              <VBox spacing="6.0" styleClass="stats-card, card-clientes">
                                 <children>
                                    <Label styleClass="stats-icon" text="👥" alignment="CENTER">
                                       <font>
                                          <Font size="32.0" />
                                       </font>
                                    </Label>
                                    <Label styleClass="stats-title" text="Clientes" alignment="CENTER">
                                       <font>
                                          <Font name="System Bold" size="14.0" />
                                       </font>
                                    </Label>
                                    <Label fx:id="clientesLabel" styleClass="stats-value" text="856" alignment="CENTER">
                                       <font>
                                          <Font name="System Bold" size="20.0" />
                                       </font>
                                    </Label>
                                    <Label fx:id="clientesNuevosLabel" styleClass="stats-detail" text="5 nuevos esta semana" alignment="CENTER">
                                       <font>
                                          <Font size="11.0" />
                                       </font>
                                    </Label>
                                 </children>
                                 <padding>
                                    <Insets bottom="0.0" left="20.0" right="20.0" top="15.0" />
                                 </padding>
                                 <spacing>10.0</spacing>
                                 <alignment>CENTER</alignment>
                                 <VBox.vgrow>ALWAYS</VBox.vgrow>
                              </VBox>
                           </children>
                        </HBox>
                        
                        
                        <!-- Información adicional -->
                        <HBox spacing="20.0">
                           <children>
                              <!-- Últimas ventas -->
                              <VBox spacing="0.0" styleClass="info-panel" HBox.hgrow="ALWAYS">
                                 <children>
                                    <!-- Encabezado destacado ordenado -->
                                    <StackPane styleClass="info-panel-header">
                                       <children>
                                          <HBox spacing="10.0" alignment="CENTER_LEFT">
                                             <children>
                                                <Label styleClass="info-panel-icon" text="🛒" />
                                                <Label styleClass="info-panel-title" text="Últimas Ventas" />
                                             </children>
                                          </HBox>
                                       </children>
                                    </StackPane>
                                    <!-- Tabla con columnas -->
                           <TableView fx:id="ultimasVentasTable" prefHeight="150.0" styleClass="info-panel-table stock">
                              <columnResizePolicy>
                                 <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                              </columnResizePolicy>
                                       <columns>
                                   <TableColumn fx:id="colFechaHora" text="Fecha y hora" prefWidth="150" />
                                   <TableColumn fx:id="colCliente" text="Cliente" prefWidth="220" />
                                   <TableColumn fx:id="colTotal" text="Total" prefWidth="100" />
                                   <TableColumn fx:id="colMetodoPago" text="Comprobante/Serie" prefWidth="150" />
                                       </columns>
                                       <VBox.vgrow>ALWAYS</VBox.vgrow>
                                    </TableView>
                                 </children>
                              </VBox>
                              <!-- Productos con stock bajo -->
                              <VBox spacing="0.0" styleClass="info-panel" HBox.hgrow="ALWAYS">
                                 <children>
                                    <!-- Encabezado destacado igual que Últimas Ventas -->
                                    <StackPane styleClass="info-panel-header2">
                                       <children>
                                          <HBox spacing="10.0" alignment="CENTER_LEFT">
                                             <children>
                                                <Label styleClass="info-panel-icon" text="📦" />
                                                <Label styleClass="info-panel-title" text="Stock Bajo" />
                                             </children>
                                          </HBox>
                                       </children>
                                    </StackPane>
                                    <!-- Tabla con columnas: Producto, Stock Actual, Stock Mínimo -->
                           <TableView fx:id="stockBajoTable" prefHeight="150.0" styleClass="info-panel-table stock">
                              <columnResizePolicy>
                                 <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                              </columnResizePolicy>
                                       <columns>
                                          <TableColumn fx:id="colProducto" text="Producto" prefWidth="220" styleClass="table-column-center" />
                                          <TableColumn fx:id="colStockActual" text="Stock Actual" prefWidth="120" styleClass="table-column-center" />
                                          <TableColumn fx:id="colStockMinimo" text="Stock Mínimo" prefWidth="120" styleClass="table-column-center" />
                                       </columns>
                                       <VBox.vgrow>ALWAYS</VBox.vgrow>
                                    </TableView>
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                     </padding>
                  </VBox>
               </content>
            </ScrollPane>
         </children>
      </StackPane>
   </center>
   
   <!-- BARRA INFERIOR DE ESTADO -->
   <bottom>
      <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="status-bar">
         <children>
            <Label fx:id="statusLabel" text="Sistema operativo - Conexión estable">
               <font>
                  <Font size="11.0" />
               </font>
            </Label>
            
            <Region HBox.hgrow="ALWAYS" />

            <Label fx:id="versionLabel" text="PharmaVictoria v1.0">
               <font>
                  <Font size="10.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets bottom="5.0" left="20.0" right="20.0" top="5.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>