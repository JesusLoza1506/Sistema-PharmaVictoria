<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<VBox styleClass="form-container" stylesheets="@/css/Cliente/cliente-form.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.farmaciavictoria.proyectopharmavictoria.controller.Cliente.ClienteFormController">
    <children>
        <!-- ===== HEADER ===== -->
        <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="form-header">
            <children>
                <Label fx:id="lblTitulo" styleClass="form-title" text=" NUEVO CLIENTE" />
            </children>
        </HBox>

        <!-- ===== FORMULARIO ===== -->
        <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
            <content>
                <VBox spacing="20.0" styleClass="form-content">
                    <children>
                        <!-- ===== SECCIÓN INFORMACIÓN BÁSICA ===== -->
                        <VBox spacing="15.0" styleClass="form-section">
                            <children>
                                <Label styleClass="section-title" text=" INFORMACIÓN BÁSICA" />
                                <HBox spacing="15.0">
                                    <children>
                                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                            <children>
                                                <Label styleClass="field-label" text="Tipo de Cliente *" />
                                                <ComboBox fx:id="comboTipoCliente" promptText="Selecciona tipo" styleClass="field-input">
                                                    <!-- Los items se inicializan en el controlador -->
                                                </ComboBox>
                                            </children>
                                        </VBox>
                                    </children>
                                </HBox>
                                <HBox spacing="15.0">
                                    <children>
                                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                            <children>
                                                <Label styleClass="field-label" text="DNI *" />
                                                <TextField fx:id="txtDni" promptText="Ej: 12345678" styleClass="field-input" />
                                            </children>
                                        </VBox>
                                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                            <children>
                                                <Label styleClass="field-label" text="RUC *" />
                                                <TextField fx:id="txtRuc" promptText="Ej: 20123456789" styleClass="field-input" />
                                            </children>
                                        </VBox>
                                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                            <children>
                                                <Label styleClass="field-label" text="Fecha de Nacimiento" />
                                                <DatePicker fx:id="dpFechaNacimiento" styleClass="field-input" />
                                            </children>
                                        </VBox>
                                    </children>
                                </HBox>
                                <HBox spacing="15.0">
                                    <children>
                                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                            <children>
                                                <Label styleClass="field-label" text="Nombres *" />
                                                <TextField fx:id="txtNombres" promptText="Ej: Juan Carlos" styleClass="field-input" />
                                            </children>
                                        </VBox>
                                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                            <children>
                                                <Label styleClass="field-label" text="Apellidos *" />
                                                <TextField fx:id="txtApellidos" promptText="Ej: Pérez Gómez" styleClass="field-input" />
                                            </children>
                                        </VBox>
                                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                            <children>
                                                <Label styleClass="field-label" text="Razón Social *" />
                                                <TextField fx:id="txtRazonSocial" promptText="Ej: Empresa S.A.C." styleClass="field-input" />
                                            </children>
                                        </VBox>
                                    </children>
                                </HBox>
                                <HBox spacing="15.0">
                                    <children>
                                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                            <children>
                                                <Label styleClass="field-label" text="Teléfono" />
                                                <TextField fx:id="txtTelefono" promptText="Ej: 987654321" styleClass="field-input" />
                                            </children>
                                        </VBox>
                                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                            <children>
                                                <Label styleClass="field-label" text="Email" />
                                                <TextField fx:id="txtEmail" promptText="Ej: correo@dominio.com" styleClass="field-input" />
                                            </children>
                                        </VBox>
                                    </children>
                                </HBox>
                                <VBox spacing="5.0">
                                    <children>
                                        <Label styleClass="field-label" text="Dirección" />
                                        <TextArea fx:id="txtDireccion" prefRowCount="2" promptText="Ej: Av. Siempre Viva 123" styleClass="field-textarea" />
                                    </children>
                                </VBox>

                            </children>
                        </VBox>

                        <!-- ===== CONFIGURACIÓN ===== -->
                        <VBox spacing="15.0" styleClass="form-section">
                            <children>
                                <Label styleClass="section-title" text=" CONFIGURACIÓN" />
                                <HBox spacing="20.0">
                                    <children>
                                        <CheckBox fx:id="chkActivo" selected="true" styleClass="field-checkbox" text="Cliente Activo" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>

                        <HBox alignment="CENTER" style="-fx-padding: 0 0 0 0;">
                            <children>
                                <Label fx:id="lblError" text="" style="-fx-text-fill: #d32f2f; -fx-font-size: 13px;" visible="false" />
                            </children>
                        </HBox>
                    </children>
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                </VBox>
            </content>
        </ScrollPane>

        <!-- ===== BOTONES ===== -->
        <HBox alignment="CENTER" spacing="15.0" styleClass="form-actions">
            <children>
                <Button fx:id="btnGuardar" mnemonicParsing="false" onAction="#onGuardarCliente" styleClass="btn-primary" text=" Guardar Cliente" />
                <Button fx:id="btnLimpiar" mnemonicParsing="false" onAction="#onLimpiarCampos" styleClass="btn-secondary" text=" Limpiar Campos" />
                    <!-- Botón Cancelar eliminado -->
            </children>
            <padding>
                <Insets bottom="15" left="15" right="15" top="15" />
            </padding>
        </HBox>
    </children>
</VBox>
