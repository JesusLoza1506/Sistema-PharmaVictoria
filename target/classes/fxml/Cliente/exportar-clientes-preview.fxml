<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="0" styleClass="exportar-modal" stylesheets="@/css/styles.css, @/css/Cliente/clientes.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.farmaciavictoria.proyectopharmavictoria.controller.Cliente.ExportarClientesController">
    <children>
        <Label styleClass="modal-title" text="Exportar Clientes / Reporte" />
        <Separator />
        <VBox spacing="18.0" styleClass="modal-content-box">
            <children>
                <!-- Barra de filtros eliminada para exportación -->
                <Label styleClass="preview-label" text="Vista previa de exportación:" />
                <TableView fx:id="tablePreview" styleClass="clientes-table" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colTipoCliente" prefWidth="90.0" text="Tipo" />
                        <TableColumn fx:id="colDocumento" prefWidth="120.0" text="Documento" />
                        <TableColumn fx:id="colNombreRazonSocial" prefWidth="220.0" text="Nombre / Razón social" />
                        <TableColumn fx:id="colTelefono" prefWidth="120.0" text="Teléfono" />
                        <TableColumn fx:id="colEmail" prefWidth="180.0" text="Email" />
                        <TableColumn fx:id="colDireccion" prefWidth="180.0" text="Dirección" />
                        <TableColumn fx:id="colPuntosTotales" prefWidth="100.0" text="Puntos Totales" />
                        <TableColumn fx:id="colPuntosUsados" prefWidth="100.0" text="Puntos Usados" />
                        <TableColumn fx:id="colPuntosDisponibles" prefWidth="120.0" text="Puntos Disponibles" />
                        <!-- Columna 'Frecuente' eliminada -->
                    </columns>
                </TableView>
            </children>
        </VBox>
        <HBox spacing="32.0" alignment="CENTER" styleClass="modal-footer-bar">
         <children>
            <Button fx:id="btnExportarExcel" styleClass="exportar-excel-btn">
                <graphic>
                    <ImageView fitHeight="70" fitWidth="820" preserveRatio="true">
                        <image>
                            <Image url="@/icons/excel download.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="btnExportarPDF" styleClass="exportar-pdf-btn">
                <graphic>
                    <ImageView fitHeight="70" fitWidth="820" preserveRatio="true">
                        <image>
                            <Image url="@/icons/pdf download.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
         </children>
            <padding>
                <Insets top="18.0" bottom="8.0" left="0.0" right="0.0" />
            </padding>
        </HBox>
    </children>
    <padding>
        <Insets top="28.0" bottom="28.0" left="36.0" right="36.0" />
    </padding>
</VBox>
