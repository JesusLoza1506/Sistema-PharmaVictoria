<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="0" styleClass="exportar-modal" stylesheets="@/css/styles.css, @/css/Inventario/productos.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml" fx:controller="com.farmaciavictoria.proyectopharmavictoria.controller.Usuario.ExportarUsuariosPreviewController">
    <children>
        <Label styleClass="modal-title" text="Exportar Usuarios / Reporte" />
        <Separator />
        <VBox spacing="18.0" styleClass="modal-content-box">
            <children>
                <HBox spacing="24.0" alignment="CENTER_LEFT" styleClass="modal-filter-bar">
                    <children>
                        <Label styleClass="filter-label" text="Estado:" />
                        <ComboBox fx:id="cmbEstado" prefWidth="120.0" promptText="Todos" styleClass="filter-combo" />
                        <Label styleClass="filter-label" text="Buscar:" />
                        <TextField fx:id="txtBuscar" prefWidth="220.0" promptText="Nombre, DNI, Usuario..." styleClass="search-field" />
                    </children>
                </HBox>
                <Label styleClass="preview-label" text="Vista previa de exportación:" />
                <TableView fx:id="tablePreview" styleClass="productos-table" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colUsuario" text="Usuario" />
                        <TableColumn fx:id="colNombres" text="Nombres" />
                        <TableColumn fx:id="colApellidos" text="Apellidos" />
                        <TableColumn fx:id="colDni" text="DNI" />
                        <TableColumn fx:id="colTelefono" text="Teléfono" />
                        <TableColumn fx:id="colEmail" text="Email" />
                        <TableColumn fx:id="colRol" text="Rol" />
                        <TableColumn fx:id="colEstado" text="Estado" />
                    </columns>
                </TableView>
            </children>
        </VBox>
        <HBox spacing="32.0" alignment="CENTER" styleClass="modal-footer-bar">
         <children>
            <Button fx:id="btnExportarExcel" styleClass="exportar-excel-btn">
                <graphic>
                    <ImageView fitHeight="32" fitWidth="32" preserveRatio="true">
                        <image>
                            <Image url="@/icons/excel download.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="btnExportarPDF" styleClass="exportar-pdf-btn">
                <graphic>
                    <ImageView fitHeight="32" fitWidth="32" preserveRatio="true">
                        <image>
                            <Image url="@/icons/pdf download.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
         </children>
            <padding>
                <Insets top="18.0" bottom="8.0" left="0.0" right="0.0" />
            </padding>
        </HBox>
    </children>
    <padding>
        <Insets top="28.0" bottom="28.0" left="36.0" right="36.0" />
    </padding>
</VBox>
