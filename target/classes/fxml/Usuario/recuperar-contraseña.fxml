<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx/21.0.1" xmlns:fx="http://javafx.com/fxml" spacing="16" alignment="CENTER" styleClass="recovery-dialog">
    <Label text="Recuperar contraseña" styleClass="title" />
    <Label text="Ingresa el código recibido por correo y tu nueva contraseña." />
    <TextField fx:id="codigoField" promptText="Código de recuperación" maxWidth="220" />
    <PasswordField fx:id="nuevaPasswordField" promptText="Nueva contraseña" maxWidth="220" />
    <PasswordField fx:id="confirmarPasswordField" promptText="Confirmar contraseña" maxWidth="220" />
    <Button fx:id="btnRecuperar" text="Actualizar contraseña" maxWidth="220" />
    <Label fx:id="lblMensaje" text="" styleClass="mensaje" />
</VBox>
