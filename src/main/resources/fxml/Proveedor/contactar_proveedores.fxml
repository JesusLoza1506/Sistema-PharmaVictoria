<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<StackPane fx:id="modalRoot" styleClass="modal-root" stylesheets="@/css/Proveedor/contactar_proveedores.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.farmaciavictoria.proyectopharmavictoria.controller.Proveedor.ContactarProveedoresController">
    <children>
        <VBox spacing="18.0" alignment="TOP_CENTER" styleClass="modal-vbox">
            <children>
                <Label text="Contactar Proveedores" styleClass="modal-title" />
                <HBox spacing="18.0" alignment="CENTER_LEFT">
                    <children>
                        <Label text="Plantilla:" styleClass="modal-label" />
                        <ComboBox fx:id="cmbPlantillas" promptText="Selecciona plantilla" styleClass="modal-field" />
                    </children>
                </HBox>
                <Label text="Historial de mensajes enviados:" styleClass="modal-label" />
                <ListView fx:id="listHistorial" prefHeight="80.0" styleClass="modal-listview" />
                <TableView fx:id="tableSeleccionProveedores" prefHeight="220.0" styleClass="modal-table">
                    <columns>
                        <TableColumn fx:id="colSeleccion" text="Seleccionar" />
                        <TableColumn fx:id="colRazonSocial" text="Razón Social" />
                        <TableColumn fx:id="colCorreo" text="Correo" />
                    </columns>
                </TableView>
                <TextField fx:id="txtAsunto" promptText="Asunto del mensaje" styleClass="modal-field" />
                <TextArea fx:id="txtMensaje" promptText="Escribe tu mensaje aquí..." prefRowCount="5" styleClass="modal-field" />
                <HBox spacing="12.0" alignment="CENTER_LEFT">
                    <children>
                        <Button fx:id="btnAdjuntar" text="Adjuntar archivo" styleClass="modal-btn-blue" onAction="#onAdjuntar" />
                        <Label fx:id="lblArchivoAdjunto" text="Sin archivo adjunto" styleClass="modal-file-label" />
                    </children>
                </HBox>
                <HBox spacing="22.0" alignment="CENTER">
                    <children>
                        <Button fx:id="btnEnviar" text="Enviar correo" styleClass="modal-btn-green" onAction="#onEnviarCorreo" />
                        <Button fx:id="btnCancelar" text="Cancelar" styleClass="modal-btn-gray" onAction="#onCancelar" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</StackPane>
