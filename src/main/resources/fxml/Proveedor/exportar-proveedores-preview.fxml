<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<VBox spacing="0" styleClass="exportar-modal" stylesheets="@/css/styles.css, @/css/Inventario/productos.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.farmaciavictoria.proyectopharmavictoria.controller.Proveedor.ExportarProveedoresController">
    <children>
        <Label styleClass="modal-title" text="Exportar Proveedores / Reporte" />
        <Separator />
        <VBox spacing="18.0" styleClass="modal-content-box">
            <children>
                <HBox alignment="CENTER" spacing="24.0" styleClass="filter-bar">
                    <children>
                        <Label styleClass="filter-label" text="Buscar:" />
                        <TextField fx:id="txtBuscar" prefWidth="250.0" promptText="Razón social, RUC, contacto..." styleClass="search-field" />
                        <Label styleClass="filter-label" text="Buscar por:" />
                        <ComboBox fx:id="cmbTipoFiltro" prefWidth="120.0" promptText="Razón Social" styleClass="filter-combo" />
                        <Label styleClass="filter-label" text="Estado:" />
                        <ComboBox fx:id="cmbEstadoFiltro" prefWidth="120.0" promptText="Todos" styleClass="filter-combo" />
                        <CheckBox fx:id="chkSoloActivos" styleClass="filter-checkbox" text="Solo activos" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label fx:id="lblContadorTotal" styleClass="total-count" text="Total: 0 proveedores" />
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="24.0" right="24.0" top="10.0" />
                    </padding>
                </HBox>
                <Label styleClass="preview-label" text="Vista previa de exportación:" />
                <TableView fx:id="tablePreview" styleClass="productos-table" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colRazonSocial" prefWidth="250.0" text="Razón Social" />
                        <TableColumn fx:id="colRuc" prefWidth="100.0" text="RUC" />
                        <TableColumn fx:id="colContacto" prefWidth="140.0" text="Contacto" />
                        <TableColumn fx:id="colTelefono" prefWidth="110.0" text="Teléfono" />
                        <TableColumn fx:id="colCondicionesPago" prefWidth="140.0" text="Condiciones Pago" />
                        <TableColumn fx:id="colEstado" prefWidth="90.0" text="Estado" />
                                <!-- Columna sucursal eliminada -->
                        <TableColumn fx:id="colTipoProducto" prefWidth="120.0" text="Tipo Producto" />
                    </columns>
                </TableView>
            </children>
        </VBox>
        <HBox spacing="32.0" alignment="CENTER" styleClass="modal-footer-bar">
         <children>
            <Button fx:id="btnExportarExcel" styleClass="exportar-excel-btn">
                <graphic>
                    <ImageView fitHeight="70" fitWidth="820" preserveRatio="true">
                        <image>
                            <Image url="@/icons/excel download.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="btnExportarPDF" styleClass="exportar-pdf-btn">
                <graphic>
                    <ImageView fitHeight="70" fitWidth="820" preserveRatio="true">
                        <image>
                            <Image url="@/icons/pdf download.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
         </children>
            <padding>
                <Insets top="18.0" bottom="8.0" left="0.0" right="0.0" />
            </padding>
        </HBox>
    </children>
    <padding>
        <Insets top="28.0" bottom="28.0" left="36.0" right="36.0" />
    </padding>
</VBox>
