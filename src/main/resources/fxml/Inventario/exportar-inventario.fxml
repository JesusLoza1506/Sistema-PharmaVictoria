<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="0" styleClass="exportar-modal" stylesheets="@/css/styles.css, @/css/Inventario/productos.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.farmaciavictoria.proyectopharmavictoria.controller.Inventario.ExportarInventarioController">
   <children>
      <Label styleClass="modal-title" text="Exportar Inventario / Reporte" />
      <Separator />
      <VBox spacing="18.0" styleClass="modal-content-box">
         <children>
            <HBox spacing="24.0" alignment="CENTER_LEFT" styleClass="modal-filter-bar">
               <children>
                  <Label styleClass="filter-label" text="Filtrar por categoría:" />
                  <ComboBox fx:id="cmbCategoria" prefWidth="160.0" promptText="Todas las categorías" styleClass="filter-combo" />
                  <Label styleClass="filter-label" text="Estado:" />
                  <ComboBox fx:id="cmbEstado" prefWidth="120.0" promptText="Todos" styleClass="filter-combo" />
                  <Label styleClass="filter-label" text="Buscar:" />
                  <TextField fx:id="txtBuscar" prefWidth="220.0" promptText="Nombre, laboratorio, lote..." styleClass="search-field" />
               </children>
            </HBox>
            <Label styleClass="preview-label" text="Vista previa de exportación:" />
            <TableView fx:id="tablePreview" styleClass="productos-table" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="colCodigo" text="Código" />
                  <TableColumn fx:id="colNombre" text="Nombre" />
                  <TableColumn fx:id="colPrecioVenta" text="Precio S/" />
                  <TableColumn fx:id="colStockActual" text="Stock" />
                  <TableColumn fx:id="colFechaVencimiento" text="Vencimiento" />
                  <TableColumn fx:id="colEstado" text="Estado" />
               </columns>
            </TableView>
         </children>
      </VBox>
      <HBox spacing="32.0" alignment="CENTER" styleClass="modal-footer-bar">
       <children>
         <Button fx:id="btnExportarExcel" styleClass="exportar-excel-btn">
            <graphic>
               <ImageView fitHeight="70" fitWidth="820" preserveRatio="true">
                  <image>
                     <Image url="@/icons/excel download.png" />
                  </image>
               </ImageView>
            </graphic>
         </Button>
         <Button fx:id="btnExportarPDF" styleClass="exportar-pdf-btn">
            <graphic>
               <ImageView fitHeight="70" fitWidth="820" preserveRatio="true">
                  <image>
                     <Image url="@/icons/pdf download.png" />
                  </image>
               </ImageView>
            </graphic>
         </Button>
       </children>
         <padding>
            <Insets top="18.0" bottom="8.0" left="0.0" right="0.0" />
         </padding>
      </HBox>
   </children>
   <padding>
      <Insets top="28.0" bottom="28.0" left="36.0" right="36.0" />
   </padding>
</VBox>
