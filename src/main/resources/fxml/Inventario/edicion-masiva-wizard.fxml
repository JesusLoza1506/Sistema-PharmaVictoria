<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.farmaciavictoria.proyectopharmavictoria.controller.Inventario.EdicionMasivaWizardController" spacing="20" alignment="CENTER" styleClass="wizard-root">
    <StackPane fx:id="wizardStack" styleClass="wizard-stack" VBox.vgrow="ALWAYS">
        <!-- Vista 1: Selección de productos y campos -->
        <VBox fx:id="vistaSeleccion" spacing="15" alignment="CENTER" styleClass="wizard-page">
            <Label text="Edición Masiva de Productos" styleClass="wizard-title" />
            <Label text="1. Selecciona los productos a editar:" styleClass="wizard-step" />
            <HBox spacing="12" alignment="CENTER">
                <TextField fx:id="txtBuscarProducto" promptText="Buscar por nombre, código..." styleClass="wizard-search" />
            </HBox>
            <TableView fx:id="tableSeleccionProductos" styleClass="wizard-table" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colSeleccionar" text="Seleccionar" />
                    <TableColumn fx:id="colCodigo" text="Código" />
                    <TableColumn fx:id="colNombre" text="Nombre" />
                </columns>
            </TableView>
            <Label text="2. Selecciona los campos a editar:" styleClass="wizard-step" />
            <ScrollPane fitToWidth="true" fitToHeight="false" hbarPolicy="AS_NEEDED" vbarPolicy="AS_NEEDED" maxHeight="80" style="-fx-background-color:transparent;">
                <FlowPane fx:id="camposFlow" hgap="18" vgap="12" alignment="CENTER" prefWrapLength="540" style="-fx-padding:8 0 8 0;">
                    <!-- Los checkboxes se generan dinámicamente desde el controlador -->
                </FlowPane>
            </ScrollPane>
            <Button text="Siguiente" fx:id="btnSiguiente" styleClass="wizard-next" />
        </VBox>
        <!-- Vista 2: Edición de valores -->
        <VBox fx:id="vistaEdicion" spacing="15" alignment="CENTER" styleClass="wizard-page" visible="false">
            <Label text="3. Edita los valores para cada producto:" styleClass="wizard-step" />
            <TableView fx:id="tableEdicionMasiva" styleClass="wizard-table" VBox.vgrow="ALWAYS" editable="true" />
            <HBox spacing="10" alignment="CENTER">
                <Button text="Volver" fx:id="btnVolver" styleClass="wizard-back" />
                <Button text="Aplicar Cambios" fx:id="btnAplicarCambios" styleClass="wizard-apply" />
            </HBox>
        </VBox>
    </StackPane>
</VBox>
