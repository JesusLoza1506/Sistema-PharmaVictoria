<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.farmaciavictoria.proyectopharmavictoria.controller.ForgotPasswordDialogController" styleClass="forgot-dialog-root">
    <children>
        <VBox alignment="CENTER" spacing="18.0" maxWidth="400.0" styleClass="forgot-dialog-container">
            <children>
                <ImageView fitHeight="64.0" fitWidth="64.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@/icons/mail.png" />
                    </image>
                </ImageView>
                <Label text="Recuperar acceso" styleClass="forgot-dialog-title">
                    <font>
                        <Font name="System Bold" size="22.0" />
                    </font>
                </Label>
                <Label text="Ingrese el correo con el que se registrÃ³. Le enviaremos instrucciones para recuperar su acceso." wrapText="true" styleClass="forgot-dialog-desc" />
                <TextField fx:id="emailField" promptText="ejemplo@correo.com" styleClass="forgot-dialog-email" />
                <Label fx:id="errorLabel" text="" visible="false" styleClass="forgot-dialog-error" />
                <HBox alignment="CENTER" spacing="16.0">
                    <children>
                        <Button fx:id="sendButton" text="Enviar instrucciones" styleClass="forgot-dialog-send" />
                        <Button fx:id="cancelButton" text="Cancelar" styleClass="forgot-dialog-cancel" />
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets top="32.0" right="32.0" bottom="32.0" left="32.0" />
            </padding>
        </VBox>
    </children>
</StackPane>
