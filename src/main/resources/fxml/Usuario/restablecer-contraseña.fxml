<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.farmaciavictoria.proyectopharmavictoria.controller.ResetPasswordController" alignment="CENTER" spacing="18" style="-fx-background-color: white; -fx-padding: 32; -fx-border-radius: 8; -fx-background-radius: 8;">
    <Label text="Restablecer contraseña" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2e7d32;" />
    <Label text="Ingrese el código recibido y su nueva contraseña." style="-fx-font-size: 13px; -fx-text-fill: #555;" />
    <TextField fx:id="codigoField" promptText="Código de recuperación" />
    <PasswordField fx:id="nuevaPasswordField" promptText="Nueva contraseña" />
    <Button fx:id="confirmarButton" text="Confirmar" style="-fx-background-color: #2e7d32; -fx-text-fill: white; -fx-font-weight: bold;" />
    <Label fx:id="mensajeLabel" text="" style="-fx-text-fill: red;" />
</VBox>
