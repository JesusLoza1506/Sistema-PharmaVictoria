<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<DialogPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.farmaciavictoria.proyectopharmavictoria.controller.Ventas.FacturaRapidaDialogController">
    <content>
        <VBox spacing="12" style="-fx-padding: 20;">
            <children>
                <Label text="Datos para Factura Electrónica" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                <HBox spacing="8">
                    <children>
                        <Label text="Razón Social:" minWidth="100" />
                        <TextField fx:id="txtRazonSocial" promptText="Razón Social" prefWidth="220" />
                    </children>
                </HBox>
                <HBox spacing="8">
                    <children>
                        <Label text="RUC:" minWidth="100" />
                        <TextField fx:id="txtRuc" promptText="RUC (11 dígitos)" prefWidth="150" />
                    </children>
                </HBox>
                <HBox spacing="8">
                    <children>
                        <Label text="Dirección:" minWidth="100" />
                        <TextField fx:id="txtDireccion" promptText="Dirección fiscal" prefWidth="220" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </content>
    <buttonTypes>
        <ButtonType fx:id="btnAceptar" text="Aceptar" buttonData="OK_DONE" />
        <ButtonType text="Cancelar" buttonData="CANCEL_CLOSE" />
    </buttonTypes>
</DialogPane>
