<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<DialogPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml" fx:controller="com.farmaciavictoria.proyectopharmavictoria.RucDialogController">
    <content>
        <VBox spacing="10" alignment="CENTER">
            <Label text="Ingrese el RUC del cliente" />
            <TextField fx:id="rucTextField" promptText="RUC" />
            <Label fx:id="errorLabel" textFill="red" visible="false" />
        </VBox>
    </content>
    <buttonTypes>
        <ButtonType text="Aceptar" buttonData="OK_DONE" />
        <ButtonType text="Cancelar" buttonData="CANCEL_CLOSE" />
    </buttonTypes>
</DialogPane>
