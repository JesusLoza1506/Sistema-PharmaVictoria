<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<AnchorPane fx:id="root" xmlns:fx="http://javafx.com/fxml" fx:controller="com.farmaciavictoria.proyectopharmavictoria.controller.configuracion.RespaldosRestauracionCardController" prefWidth="280" prefHeight="180" style="-fx-background-color: #FFE0B2; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, #BCAAA4, 8,0,0,2);">
    <children>
        <ImageView fx:id="imgIcono" layoutX="110" layoutY="18" fitWidth="60" fitHeight="60" preserveRatio="true">
            <image>
                <Image url="@/icons/respaldobd.png" />
            </image>
        </ImageView>
        <Label fx:id="lblTitulo" text="Respaldos y Restauración" layoutX="16" layoutY="90" style="-fx-text-fill: #333; -fx-font-size: 18px; -fx-font-weight: bold;" />
        <Label fx:id="lblDetalle" text="Configura respaldos automáticos." layoutX="16" layoutY="140" style="-fx-text-fill: #555; -fx-font-size: 15px; -fx-underline: true;" />
    </children>
</AnchorPane>
